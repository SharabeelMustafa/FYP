<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="assets/css/style.css" />
    <title>Demo 2</title>
</head>

<body>
    <!-- Bars -->
    <div class="container-fluid p-0" id="some-menu"></div>
    <!--*** BARS END ***-->

    <div class="page-wrapper px-3 ">


        <div class="container-fluid  rounded-2 px-0">

            <div class="d-flex justify-content-between bg-color rounded-3 p-3 gap-2 card-shadow">
                <div class="py-3">
                    <% let fullString = currentDate.toString(); %>
                     <% let desiredPart = fullString.substring(0, 21); %>
                   
                    <p class="small text-white my-5"><%= desiredPart%></p>
                    <h2 class="mb-0 text-white">Welcome ,<%= student.name %> !</h2>
                    <p class="mb-0 text-white">Always stay updated in your Bus portal</p>
                </div>
                <div class="me-2">
                    
                    <img src="uploads/<%=student.profile_img %>"  class="r-img" alt="" width="200px" height="200px" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <div class="d-flex justify-content-between bg-color rounded-3 p-3 gap-2 card-shadow">
                        <div class="">
                            <h2 class="mb-lg-5 text-white">Bus info </h2>
                            <button class="btn btn-primary bg-dark btn-blue">view</button>
                        </div>
                        <div class="me-2">
                            <!-- <img width="246px" height="189px " src="./assets/images/busImage.png" alt="" /> -->
                        </div>
                    </div>
                    <div class="d-flex justify-content-between bg-color rounded-3 p-3 gap-2 card-shadow mt-3">
                        <div class="">
                            <h2 class="mb-lg-5 text-white">Bus info </h2>
                            <button class="btn btn-primary bg-dark btn-blue w-75">view</button>
                        </div>
                        <div class="me-2">
                            <!-- <img width="246px" height="189px " src="./assets/images/busImage.png" alt="" /> -->
                        </div>
                    </div>
                </div>
                <div class="col-lg-8" bis_skin_checked="1">
                    <div class="bg-color card-Shadow rounded-2 mb-3 p-4" bis_skin_checked="1">
                        <div class="flex-between" bis_skin_checked="1">
                            <h3 class="mb-0 text-white ">Notification !</h3>
                        </div>
                        <div class="" bis_skin_checked="1">
                            <div class="row overflow-auto  flex-nowrap" style="height: 250px;"
                                bis_skin_checked="1">
                                
                              <% notification.forEach(notif =>{ %>

                          
                                <div class="col-lg-3 my-3">
                                    <div class="bg-white card-Shadow rounded-2 mb-3 p-2 "style="height:200px; width: 200px;" bis_skin_checked="1">
                                        
                                        <a  href="/dell_si_notif/<%=notif.sin_id%>">
                                            <img src="assets/images/icons/close.svg" height="10px" width="10px" alt="" style="float:right"> 
                                        </a>
                                        
                        
                                        <div class="m-2">
                                            
                                            <h5><%=notif.heading %></h5>
                                            <p><%=notif.note %></p>
                                            <br>
                                          
                                            <% let fullString = notif.update_at.toString(); %>
                                            <% let desiredPart = fullString.substring(0, 21); %>
                                                     
                                            <p><%=desiredPart %></p>
                                        </div>
                                       
                                    </div>
                                </div>
                             
                             <% }); %>
                            </div>
                        </div>
                    </div>
                </div>
           
       
        
    </div>
  

    </div>
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="assets/js/jquery-3.6.3.min.js"></script>
    <script src="assets/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/main.js"></script>
    <script src="assets/js/moment.min.js"></script>
    <script src="assets/js/Toggels.js"></script>
    <script>
        
        $("#some-menu").load("navbars_stu.ejs");
    </script>
   
   <footer class="mxc">
    <div class=" mtc rounded-3 p-1 gap-2 bg-color">
       <h5 class="text-white">CU BSU portal</h5>
    </div>
</footer>

</body>


</html>